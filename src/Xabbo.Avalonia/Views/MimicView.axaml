<UserControl
  xmlns="https://github.com/avaloniaui"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:controls="using:Xabbo.Avalonia.Controls"
  xmlns:vm="using:Xabbo.ViewModels"
  mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
  x:Class="Xabbo.Avalonia.Views.MimicView"
  x:DataType="vm:MimicViewModel"
>
  <StackPanel Margin="20" Spacing="25">
    <Grid ColumnDefinitions="Auto,*,Auto">
      <Border Grid.Column="0" Width="64" Height="110" Margin="0,0,20,0">
        <controls:AvatarImage
          FigureString="{Binding TargetFigure}"
          HeadOnly="true"
          Opacity="{Binding TargetFigure, Converter={x:Static StringConverters.IsNotNullOrEmpty}, FallbackValue=0}" />
      </Border>

      <StackPanel Grid.Column="1" VerticalAlignment="Center" Spacing="8">
        <TextBlock Text="{Binding StatusText}"
                   FontSize="14"
                   FontWeight="SemiBold"
                   IsVisible="{Binding StatusText, Converter={x:Static StringConverters.IsNotNullOrEmpty}}" />
        <TextBlock Text="Click 'Start' then click a user in the room"
                   FontSize="12"
                   Opacity="0.6"
                   IsVisible="{Binding !StatusText, Converter={x:Static StringConverters.IsNotNullOrEmpty}}" />
      </StackPanel>

      <Button Grid.Column="2"
              Command="{Binding ToggleMimicCmd}"
              Content="{Binding ButtonText}"
              MinWidth="100"
              Padding="20,8"
              VerticalAlignment="Center" />
    </Grid>

    <Grid RowDefinitions="Auto,Auto,Auto" ColumnDefinitions="*,*,*,*">
      <CheckBox Grid.Row="0" Grid.Column="0" IsChecked="{Binding Config.Figure}" Content="Figure" Margin="0,0,15,12" />
      <CheckBox Grid.Row="0" Grid.Column="1" IsChecked="{Binding Config.Motto}" Content="Motto" Margin="0,0,15,12" />
      <CheckBox Grid.Row="0" Grid.Column="2" IsChecked="{Binding Config.Action}" Content="Actions" Margin="0,0,15,12" />
      <CheckBox Grid.Row="0" Grid.Column="3" IsChecked="{Binding Config.Dance}" Content="Dance" Margin="0,0,0,12" />

      <CheckBox Grid.Row="1" Grid.Column="0" IsChecked="{Binding Config.Sign}" Content="Signs" Margin="0,0,15,12" />
      <CheckBox Grid.Row="1" Grid.Column="1" IsChecked="{Binding Config.Effect}" Content="Effects" Margin="0,0,15,12" />
      <CheckBox Grid.Row="1" Grid.Column="2" IsChecked="{Binding Config.Sit}" Content="Sit" Margin="0,0,15,12" />
      <CheckBox Grid.Row="1" Grid.Column="3" IsChecked="{Binding Config.Follow}" Content="Follow" Margin="0,0,0,12" />

      <CheckBox Grid.Row="2" Grid.Column="0" IsChecked="{Binding Config.Typing}" Content="Typing" Margin="0,0,15,0" />
      <CheckBox Grid.Row="2" Grid.Column="1" IsChecked="{Binding Config.Talk}" Content="Talk" Margin="0,0,15,0" />
      <CheckBox Grid.Row="2" Grid.Column="2" IsChecked="{Binding Config.Shout}" Content="Shout" Margin="0,0,15,0" />
      <CheckBox Grid.Row="2" Grid.Column="3" IsChecked="{Binding Config.Whisper}" Content="Whisper" Margin="0,0,0,0" />
    </Grid>
  </StackPanel>
</UserControl>
